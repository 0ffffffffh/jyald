<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="macosxbuild" name="build file for macosx cocoa">
    <!--ANT 1.7 is required                                        -->
    <target name="macosxbuild">
    	<mkdir dir="./bin"/>
    	<delete>
		<fileset dir="./bin">
	    		<include name="**/*.jar"/>
			</fileset>
	</delete>
        <jar destfile="bin/jyald_macosx.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.jyald.MainWindow"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="./bin"/>
            <zipfileset excludes="META-INF/*.SF" src="./lib/swt-3.7M7-cocoa-macosx.jar"/>
        </jar>
    </target>
</project>

<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="win32build" name="build file for windows">
    <!--ANT 1.7 is required                                        -->
    <target name="win32build">
    	<mkdir dir=".\bin"/>
    	<delete>
			<fileset dir=".\bin">
	    		<include name="**\*.jar"/>
			</fileset>
		</delete>
    	
        <jar destfile="bin\jyald.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.jyald.MainWindow"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir=".\bin"/>
            <zipfileset excludes="META-INF/*.SF" src=".\lib\org.eclipse.swt.win32.win32.x86_3.7.0.v3730b.jar"/>
        </jar>
    	
    </target>
</project>
